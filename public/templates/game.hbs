<div class='info'>
  
  <!-- In a room -->
  {{#if room}}

    <p class='room'>{{room}}</p>
    <input type='button' class='leave' value='Quit'>

    <!-- In a room and game has started -->
    {{#if game}}

      <p class='set-msg'></p>
      <p class='deck-size'></p>
      <input type='button' class='set' value='SET!'>

    <!-- In a room and game has not started -->
    {{else}}

      <input type='button' class='start value='Start Game'>

    {{/if}}

  <!-- Not in a room -->
  {{else}}

    <input type='button' class='new' value='New Game'>

  {{/if}}

</div>

<ul class='stack stack1'></ul>
<ul class='stack stack2'></ul>
<ul class='stack stack3'></ul>